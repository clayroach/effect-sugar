{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "plugins": [
      {
        "name": "effect-sugar-ts-plugin"
      }
      // NOTE: tsc-plugin (effect-sugar-tsc) is incompatible with Language Service
      // Use tsconfig.build.json for compilation instead
    ]
  },
  "include": ["*.ts"],
  "exclude": ["errors.ts"]
}
