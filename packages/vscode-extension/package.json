{
  "name": "effect-sugar",
  "displayName": "Effect Sugar",
  "description": "Syntax highlighting, TypeScript support, and Prettier formatting for Effect-TS gen blocks",
  "version": "0.1.0",
  "private": true,
  "publisher": "atrim",
  "repository": {
    "type": "git",
    "url": "https://github.com/clayroach/effect-sugar"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "typescriptServerPlugins": [
    {
      "name": "effect-sugar-ts-plugin",
      "enableForWorkspaceTypeScriptVersions": true
    }
  ],
  "contributes": {
    "languages": [
      {
        "id": "effect-sugar-typescript",
        "aliases": [
          "Effect Sugar TypeScript"
        ],
        "extensions": [
          ".gen.ts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "effect-sugar-typescript",
        "scopeName": "source.ts.effect-sugar",
        "path": "./syntaxes/effect-sugar.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "typescript"
        }
      },
      {
        "scopeName": "effect-sugar.injection",
        "path": "./syntaxes/effect-sugar-injection.tmLanguage.json",
        "injectTo": [
          "source.ts",
          "source.tsx"
        ]
      }
    ],
    "configuration": {
      "title": "Effect Sugar",
      "properties": {
        "effectSugar.suppressDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Suppress TypeScript diagnostics inside gen blocks"
        }
      }
    }
  },
  "scripts": {
    "build": "cd ts-plugin && pnpm build && cd .. && node esbuild.js",
    "build:production": "cd ts-plugin && pnpm build && cd .. && node esbuild.js --production",
    "dev": "node esbuild.js --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist ../../examples/node_modules/effect-sugar-ts-plugin",
    "vscode:prepublish": "pnpm run build:production",
    "package": "mkdir -p ../../target && vsce package --out ../../target/ --no-dependencies",
    "install-extension": "code --install-extension ../../target/effect-sugar-0.1.0.vsix"
  },
  "dependencies": {
    "effect-sugar-core": "workspace:*",
    "effect-sugar-ts-plugin": "workspace:*",
    "magic-string": "^0.30.5",
    "prettier": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.0"
  }
}
