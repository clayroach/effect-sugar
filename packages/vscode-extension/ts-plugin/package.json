{
  "name": "effect-sugar-ts-plugin",
  "version": "0.1.0",
  "description": "TypeScript language service plugin for Effect-TS gen block syntax (bundled with VSCode extension)",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf target/dist",
    "version:dev": "npm version --no-git-tag-version \"$(node -p \"require('./package.json').version.split('-')[0]\")-dev.$(date +%Y%m%d%H%M%S)\"",
    "publish:dev": "pnpm build && pnpm version:dev && pnpm publish --registry http://localhost:4873 --no-git-checks && git checkout package.json"
  },
  "keywords": [
    "typescript",
    "plugin",
    "effect-ts",
    "effect",
    "effect-sugar",
    "gen-blocks",
    "language-service"
  ],
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.20",
    "magic-string": "^0.30.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clayroach/effect-sugar.git",
    "directory": "packages/ts-plugin"
  },
  "license": "MIT"
}
