{
  "name": "effect-sugar-vite",
  "version": "0.3.1",
  "description": "Vite plugin for Effect-TS gen block syntax",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./backend": {
      "import": "./dist/backend.js",
      "types": "./dist/backend.d.ts"
    },
    "./register": {
      "import": "./dist/register.js",
      "types": "./dist/register.d.ts"
    },
    "./transform": {
      "import": "./dist/transform.js",
      "types": "./dist/transform.d.ts"
    },
    "./eslint": {
      "import": "./dist/eslint.js",
      "types": "./dist/eslint.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "version:dev": "npm version --no-git-tag-version \"$(node -p \"require('./package.json').version.split('-')[0]\")-dev.$(date +%Y%m%d%H%M%S)\"",
    "publish:dev": "pnpm build && pnpm version:dev && pnpm publish --registry http://localhost:4873 --no-git-checks"
  },
  "peerDependencies": {
    "esbuild": ">=0.17.0",
    "prettier": ">=3.0.0",
    "vite": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.0",
    "magic-string": "^0.30.5",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@effect-sugar/core": "workspace:*",
    "magic-string": "^0.30.5"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "effect",
    "effect-ts",
    "syntactic-sugar",
    "gen-blocks"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clayroach/effect-sugar.git",
    "directory": "packages/vite-plugin"
  }
}
