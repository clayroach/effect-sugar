{
  "name": "effect-sugar-vite",
  "version": "0.1.0",
  "description": "Vite plugin for Effect-TS gen block syntax",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./register": {
      "import": "./dist/register.js",
      "types": "./dist/register.d.ts"
    },
    "./transform": {
      "import": "./dist/transform.js",
      "types": "./dist/transform.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "preinstall": "npx only-allow pnpm",
    "publish:local": "pnpm publish --registry http://localhost:4873 --no-git-checks"
  },
  "packageManager": "pnpm@8.15.0",
  "peerDependencies": {
    "esbuild": ">=0.17.0",
    "vite": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.0",
    "magic-string": "^0.30.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "magic-string": "^0.30.5"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "effect",
    "effect-ts",
    "syntactic-sugar",
    "gen-blocks"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/croach/effect-sugar.git",
    "directory": "packages/vite-plugin"
  }
}
