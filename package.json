{
  "name": "effect-sugar-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Effect-TS syntactic sugar with for-comprehension style gen blocks",
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules target",
    "preprocess": "node scripts/preprocess.js examples",
    "format": "node scripts/format-gen.js examples",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "turbo run build && changeset publish",
    "publish:dryrun": "turbo run build && pnpm publish:dryrun:vite",
    "publish:dryrun:vite": "pnpm --filter effect-sugar-vite publish --dry-run --no-git-checks",
    "publish:dev": "pnpm publish:dev:vite",
    "publish:dev:vite": "pnpm --filter effect-sugar-vite publish:dev",
    "package:vscode": "pnpm --filter effect-sugar run package",
    "setup:debug": "pnpm --filter gen-block-examples install && mkdir -p examples/gen-block/node_modules && cp -r packages/vscode-extension/ts-plugin examples/gen-block/node_modules/effect-sugar-ts-plugin"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "effect": "^3.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "license": "MIT"
}
